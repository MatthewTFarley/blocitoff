<div class="row">
  <%= form_for [@list, @list.tasks.build], remote: true do |f| %>
  <div class="col-md-9" id="task-text-area">
    <%= f.text_area :description, placeholder: "Enter Task", class: "form-control", rows: 1 %>
  </div>
  <div class="col-md-3" id="task-btn">
    <%= f.submit class: "btn btn-success"%>
  </div>
  <% end %>