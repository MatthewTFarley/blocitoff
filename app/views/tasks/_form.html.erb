<div class="row" id="task-form-row">
  <%= form_for [@list, @list.tasks.build], remote: true do |f| %>
  <div class="col-md-8 col-md-offset-1" id="task-text-area">
    <%= f.text_field :description, placeholder: "Enter Task", class: "form-control", rows: 1 %>
  </div>
  <div class="col-md-3" id="task-btn">
    <%= f.submit class: "btn btn-success"%>
  </div>
  <% end %>
</div>