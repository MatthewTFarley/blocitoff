<!DOCTYPE html>
<html>
  <head>
    <title>Blocitoff</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <link href='http://fonts.googleapis.com/css?family=PT+Serif' rel='stylesheet' type='text/css'>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container-fluid" id="page-container-fluid">
        <ul class="nav nav-tabs" id="font-1">
          <li><%= link_to "Blocitoff", root_path, class: "navbar-brand" %></li>
          <% if current_user && current_user.list %>
          <li><%= link_to "My List", current_user.list, class: "navbar-element" %></li>
          <% else %>
            <li><%= link_to "New List", new_list_path, class: "navbar-element" %></li>
          <% end %>
          <li><%= link_to "About", about_path, class: "navbar-element" %></li>

           <div class="pull-right user-info">
             <% if current_user %>
                 Hello <%= (current_user.name || current_user.email) %>!
             <%= link_to edit_user_registration_path, class: 'btn btn-primary btn-sm', id: "edit-account-icon" do %>
                  <span class="glyphicon glyphicon-user"></span>
               <% end %>
             |
               <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm', id: "sign-out-icon" do %>
                 <span class="glyphicon glyphicon-log-out"></span>
               <% end %>
             <% else %>
             <%= link_to "Sign In", new_user_session_path, id: "sign-in-link" %> | 
             <%= link_to "Sign Up", new_user_registration_path, id: "sign-up-link" %>
             <% end %>
           </div>
        </ul>

        <% if flash[:notice] %>
          <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:error] %>
          <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:error] %>
          </div>
        <% elsif flash[:alert] %>
          <div class="alert alert-warning">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:alert] %>
          </div>
        <% end %>
    </div>
    <div class="row" id="content-row">
      <div class="container" id="content-container">
        <div class="col-md-8 col-md-offset-2 well" id="content-well">
        <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>