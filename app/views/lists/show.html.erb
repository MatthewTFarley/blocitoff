<div class="container-fluid" id="list-container-fluid">
    <div class="col-md-12 col-sm-6 well" id="list">
      <% if @list.nil? %>
        <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
      <% else %>
      <h1 class="list-name"><%= best_in_place @list, :name %></h1>
          <div class="js-tasks">
          <%= render partial: 'tasks/task', collection: @tasks %>
          </div>
        <div class="new-task">
          <%= render partial: 'tasks/form', list: @list, task: @task %>
        </div>
      <% end %>
  </div>
</div>