<div class="list-wrapper">
  <div class="list">
    <% if @list.nil? %>
      <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
    <% else %>
      <h1 class="list-name"><%= @list.name %></h1>
      <ul class="list-group">
        <%= render partial: 'tasks/task', collection: @tasks %>
      </ul>
      <%= render partial: 'tasks/form', list: @list, task: @task %>
      <div class="edit-delete-buttons">
        <%= link_to "Edit List", edit_list_path(@list), class: 'btn btn-success' %>
        <%= link_to "Delete List", list_path, method: :delete, class: 'btn btn-danger',
                    data: { confirm: 'Are you sure you want to delete this list?' } %>
      </div>
    <% end %>
  </div>
</div>
